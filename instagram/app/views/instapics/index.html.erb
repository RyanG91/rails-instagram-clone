<p id="notice"><%= notice %></p>

<h1>Instapics</h1>

<table class="table">
  <thead>
    <tr>
      <th>Picture</th>
      <th>Caption</th>
      <th>User</th>
      <th>Instapic Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instapics.each do |instapic| %>
      <tr>
        <td><%= image_tag instapic.picture_url(:thumb) %></td>
        <td><%= instapic.caption %></td>
        <td><%= instapic.user.email %></td>
        <td><%= instapic.id %></td>
        <td><%= link_to 'Show', instapic %></td>
        <td><%= link_to 'Edit', edit_instapic_path(instapic) %></td>
        <td><%= link_to 'Destroy', instapic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instapic', new_instapic_path %>
<%= link_to 'Comments', comments_path %>
